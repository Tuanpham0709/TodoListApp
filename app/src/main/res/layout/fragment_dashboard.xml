<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <GridLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:columnCount="2"
               android:orientation="vertical"
               android:rowCount="3">

               <LinearLayout
                   android:id="@+id/personal_task"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView1"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:cv_color="#7AFFEE9B"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/personal"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="@+id/circleView1"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Personal"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/meetting_task"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView3"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:cv_color="#61FF9BCD"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/meeting"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="Meeting"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/party_task"
                   android:layout_marginBottom="24dp"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView4"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:cv_color="#599BFFF8"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/party"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="Party"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/work_task"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="16dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView5"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:cv_color="#5CB5FF9B"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/work"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="Work"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/shopping_task"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="16dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView6"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:cv_color="#68FFD09B"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/shopping"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="Shopping"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/study_task"
                   android:layout_marginBottom="24dp"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="16dp"
                   android:background="@drawable/btn_press"
                   android:elevation="3dp"
                   android:gravity="center"
                   android:orientation="vertical">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <com.mikhaellopez.circleview.CircleView
                           android:id="@+id/circleView2"
                           android:layout_width="65dp"
                           android:layout_height="65dp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/study"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />
                   </androidx.constraintlayout.widget.ConstraintLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dp"
                       android:text="Study"
                       android:textColor="#686868"
                       android:textSize="16sp"
                       android:textStyle="bold" />

               </LinearLayout>
           </GridLayout>

       </LinearLayout>
    </ScrollView>
