<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:clickable="true"
    android:id="@+id/card_item"
    android:layout_marginHorizontal="16dp"
    android:layout_width="match_parent"
    app:cardElevation="1dp"
    android:elevation="2dp"
    app:cardCornerRadius="5dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:background="@drawable/bg_radius"
            android:layout_height="50dp">
        <View
            android:background="#1ED102"
            android:id="@+id/v_cat"
            android:layout_alignParentLeft="true"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_time"
            android:textSize="11sp"
            android:text="7 : 00 AM "
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/v_cat"
            android:textColor="#C6C6C8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_task_name"
            android:textStyle="bold"
            android:text="Send project file"
            android:textColor="#554E8F"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_time"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/img_check_done"
            android:src="@drawable/bell_small"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>